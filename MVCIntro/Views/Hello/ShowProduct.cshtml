@model MVCIntro.Models.Product

@{
    ViewBag.Title = "Show Product";
}

<h2>Show Product</h2>

<div>
    Product ID: @Model.ProductID</div>
<div>Product name: @Model.Name</div>
<div>Product Description: @Model.Description</div>
<div>Product Price: @Model.Price.ToString("C2")</div>
<div>Product Category: @Model.Category</div>
<p></p>
<fieldset class="border">
    <legend class="border">Substitute Product</legend>
    <form action="ShowProduct" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-10"><input type="text" name="Name" id="name" class="form-control" /></div>
        </div>
        <div class="form-group">
            <label for="desc" class="col-sm-2 control-label">Description:</label>
            <div class="col-sm-10"><input type="text" name="Description" id="desc" class="form-control" /></div>
        </div>
        <div class="form-group">
            <label for="price" class="col-sm-2 control-label">Price:</label>
            <div class="col-sm-10"><input type="number" name="Price" id="price" class="form-control" /></div>
        </div>
        <div class="form-group">
            <label for="categ" class="col-sm-2 control-label">Category:</label>
            <div class="col-sm-10"><input type="text" name="Category" id="categ" class="form-control" /></div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </form>
</fieldset>

