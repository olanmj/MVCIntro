@model MVCIntro.Models.Product

@{
    ViewBag.Title = "Show Product";
}

<fieldset>
    <legend>Show Product</legend>
    <div>Product name: @Model.Name</div>
    <div>Product Description: @Model.Description</div>
    <div>Price: @Model.Price.ToString("C0")</div>
    <div>Category: @Model.Category</div>
</fieldset>
<p></p>

<form class="form-horizontal" action="ShowProduct" method="post">
    <fieldset>
        <legend>Substitute Product</legend>

        <div class="form-group">
            <label for="Name" class="col-sm-2 control-label">Name: </label>
            <input type="text" id="Name" name="Name" class="col-sm-10 form-control" />
        </div>
        <div class="form-group">
            <label for="Description" class="col-sm-2 control-label">Description: </label>
            <input type="text" id="Description" name="Description" class="col-sm-10 form-control" />
        </div>
        <div class="form-group">
            <label for="Price" class="col-sm-2 control-label">Price:</label>
            <input type="text" id="Price" name="Price" class="col-sm-10 form-control" />
        </div>
        <div class="form-group">
            <label for="Category" class="col-sm-2 control-label">Category:</label>
            <input type="text" id="Category" name="Category" class="col-sm-10 form-control" />
        </div>
        <div class="form-group"><input type="submit" value="Submit" class="btn btn-danger col-sm-offset-2" /></div>

    </fieldset>
</form>
